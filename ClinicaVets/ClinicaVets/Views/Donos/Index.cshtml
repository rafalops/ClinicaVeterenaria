@model IEnumerable<ClinicaVets.Models.Donos>

@{
    ViewBag.Title = "Index";
}

<h2> <i><b>Lista De Donos</b></i></h2>
@if (User.IsInRole("Funcionario"))
{
    <p>
        @Html.ActionLink("Criar Novo Dono", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NIF)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NIF)
        </td>
        <td>
            @if (User.IsInRole("Funcionario"))
            {
                <div>
                    @Html.ActionLink("Editar", "Edit", new { id = item.DonoID }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.DonoID }) |
                    @Html.ActionLink("Apagar", "Delete", new { id = item.DonoID })
                </div>
            }
            
        </td>
    </tr>
}

</table>
